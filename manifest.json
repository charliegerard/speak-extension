{
  "manifest_version": 2,
  "name": "Speak",
  "description": "Speak lets you use speech-to-text to provide live captions for presentations",
  "version": "1",
  "author": "Charlie Gerard",
  "browser_action": {
    "default_icon": "caption.png",
    "default_title": "Speak",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "caption.png",
    "48": "caption.png",
    "128": "caption.png"
  },
  "minimum_chrome_version": "25",
  "permissions": [
    "activeTab",
    "contextMenus"
    // "http://*/*",
    // "https://*/*"
  ],
  "content_scripts": [{
    "js": ["content.js"],
    "matches": ["<all_urls>"],
    "all_frames": true
  }]
}
