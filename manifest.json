{
  "manifest_version": 3,
  "name": "Speak",
  "description": "Speak lets you use speech-to-text to provide live captions for presentations",
  "version": "3",
  "author": "Charlie Gerard",
  "short_name": "Speak",
  "browser_action": {
    "default_icon": "caption.png",
    "default_title": "Speak",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "caption16.png",
    "48": "caption48.png",
    "128": "caption128.png"
  },
  "minimum_chrome_version": "25",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [{
    "js": ["content.js"],
    "matches": ["<all_urls>"],
    "all_frames": true
  }]
}
